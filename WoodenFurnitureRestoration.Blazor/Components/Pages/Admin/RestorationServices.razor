@page "/admin/restoration-services"
@rendermode InteractiveServer
@attribute [StreamRendering(false)]
@attribute [AuthorizeAdmin]
@layout AdminLayout
@using WoodenFurnitureRestoration.Blazor.Services
@using WoodenFurnitureRestoration.Blazor.Components.Shared
@using WoodenFurnitureRestoration.Shared.DTOs.RestorationService
@using WoodenFurnitureRestoration.Shared.DTOs.Restoration
@using WoodenFurnitureRestoration.Shared.DTOs.Category
@using RestSvcService = WoodenFurnitureRestoration.Blazor.Services.RestorationServiceService
@using RestorationSvc = WoodenFurnitureRestoration.Blazor.Services.RestorationService
@inject AuthService AuthService
@inject RestSvcService RestorationServiceSvc
@inject RestorationSvc RestorationSvcData
@inject CategoryService CategoryService
@inject NavigationManager Navigation
@inject ILogger<RestorationServices> Logger

@if (!isAuthenticated)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;"><div class="spinner-border text-primary" role="status"></div></div>
}
else
{
    <ToastNotification IsVisible="@showToast" Title="@toastTitle" Message="@toastMessage" Type="@toastType" OnClose="() => showToast = false" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">🛠️ Restorasyon Hizmetleri</h2>
            <p class="text-muted mb-0">Toplam @services.Count hizmet | <strong class="text-success">₺@services.Sum(s => s.RestorationServicePrice).ToString("N2")</strong></p>
        </div>
        <button class="btn btn-primary btn-lg" @onclick="OpenAddModal"><i class="bi bi-plus-circle me-2"></i> Yeni Hizmet</button>
    </div>

    <!-- Filtreler -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Restorasyon</label>
                    <select class="form-select" @bind="filterRestorationId" @bind:after="ApplyFilters">
                        <option value="0">Tüm Restorasyonlar</option>
                        @foreach (var r in restorations)
                        {
                            <option value="@r.Id">@r.RestorationName</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Kategori</label>
                    <select class="form-select" @bind="filterCategoryId" @bind:after="ApplyFilters">
                        <option value="0">Tüm Kategoriler</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters"><i class="bi bi-x-circle me-1"></i> Temizle</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
            }
            else if (filteredServices?.Count == 0)
            {
                <div class="text-center py-5"><i class="bi bi-gear text-muted" style="font-size: 4rem;"></i><p class="mt-3 text-muted fs-5">Hizmet bulunamadı</p></div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Hizmet</th>
                                <th>Restorasyon</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Durum</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var svc in filteredServices)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@svc.Id</span></td>
                                    <td><strong>@svc.RestorationServiceName</strong></td>
                                    <td><span class="badge bg-warning text-dark"><i class="bi bi-tools me-1"></i>@svc.RestorationName</span></td>
                                    <td><span class="badge bg-info"><i class="bi bi-folder me-1"></i>@svc.CategoryName</span></td>
                                    <td><strong class="text-success">₺@svc.RestorationServicePrice.ToString("N2")</strong></td>
                                    <td><span class="badge @GetStatusBadge(svc.RestorationServiceStatus)">@svc.RestorationServiceStatus</span></td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => OpenEditModal(svc))"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => OpenDeleteDialog(svc))"><i class="bi bi-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <AdminModal IsVisible="@showModal" Title="@(isEditMode ? "✏️ Hizmet Düzenle" : "➕ Yeni Hizmet")" OnClose="CloseModal" OnSave="SaveService" IsSaving="@isSaving" ModalSize="modal-lg">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold"><i class="bi bi-tools me-1"></i> Restorasyon <span class="text-danger">*</span></label>
                <select class="form-select" @bind="editRestorationId">
                    <option value="0">-- Restorasyon Seçin --</option>
                    @foreach (var r in restorations)
                    {
                        <option value="@r.Id">@r.RestorationName</option>
                    }
                </select>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold"><i class="bi bi-folder me-1"></i> Kategori <span class="text-danger">*</span></label>
                <select class="form-select" @bind="editCategoryId">
                    <option value="0">-- Kategori Seçin --</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="form-label fw-bold">Hizmet Adı <span class="text-danger">*</span></label>
                <input type="text" class="form-control" @bind="editName" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Fiyat <span class="text-danger">*</span></label>
                <div class="input-group"><span class="input-group-text">₺</span><input type="number" step="0.01" class="form-control" @bind="editPrice" /></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="form-label fw-bold">Açıklama</label>
                <textarea class="form-control" rows="2" @bind="editDescription"></textarea>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Durum</label>
                <select class="form-select" @bind="editStatus">
                    <option value="Active">Aktif</option>
                    <option value="Inactive">Pasif</option>
                </select>
            </div>
        </div>
    </AdminModal>

    <ConfirmDialog IsVisible="@showDeleteDialog" Title="Hizmet Sil" Message="Bu hizmeti silmek istediğinizden emin misiniz?" ItemName="@deleteItemName" IsProcessing="@isDeleting" OnConfirm="ConfirmDelete" OnCancel="@(() => showDeleteDialog = false)" />
}

@code {
    private bool isAuthenticated, isLoading, isChecked, showModal, isEditMode, isSaving, showDeleteDialog, isDeleting, showToast;
    private List<RestorationServiceDto> services = new();
    private List<RestorationServiceDto> filteredServices = new();
    private List<RestorationDto> restorations = new();
    private List<CategoryDto> categories = new();
    private int editingId, deleteItemId;
    private string deleteItemName = "", toastTitle = "", toastMessage = "";
    private ToastNotification.ToastType toastType;

    private int filterRestorationId, filterCategoryId;
    private string editName = "", editDescription = "", editStatus = "Active";
    private int editRestorationId, editCategoryId;
    private decimal editPrice;

    protected override async Task OnAfterRenderAsync(bool firstRender) { if (firstRender && !isChecked) { isChecked = true; isAuthenticated = await AuthService.IsAdminLoggedInAsync(); if (!isAuthenticated) { Navigation.NavigateTo("/admin", replace: true); return; } await LoadData(); StateHasChanged(); } }

    private async Task LoadData() { isLoading = true; StateHasChanged(); services = await RestorationServiceSvc.GetAllAsync() ?? new(); restorations = await RestorationSvcData.GetAllAsync() ?? new(); categories = await CategoryService.GetAllAsync() ?? new(); ApplyFilters(); isLoading = false; }

    private void ApplyFilters() { filteredServices = services; if (filterRestorationId > 0) filteredServices = filteredServices.Where(s => s.RestorationId == filterRestorationId).ToList(); if (filterCategoryId > 0) filteredServices = filteredServices.Where(s => s.CategoryId == filterCategoryId).ToList(); }
    private void ClearFilters() { filterRestorationId = 0; filterCategoryId = 0; ApplyFilters(); }

    private void OpenAddModal() { isEditMode = false; editingId = 0; ResetForm(); showModal = true; }
    private void OpenEditModal(RestorationServiceDto s) { isEditMode = true; editingId = s.Id; editRestorationId = s.RestorationId; editCategoryId = s.CategoryId; editName = s.RestorationServiceName; editDescription = s.RestorationServiceDescription; editPrice = s.RestorationServicePrice; editStatus = s.RestorationServiceStatus; showModal = true; }
    private void CloseModal() { showModal = false; ResetForm(); }
    private void ResetForm() { editRestorationId = 0; editCategoryId = 0; editName = ""; editDescription = ""; editPrice = 0; editStatus = "Active"; }

    private async Task SaveService() { if (editRestorationId == 0 || editCategoryId == 0 || string.IsNullOrWhiteSpace(editName)) { ShowToast("Uyarı", "Zorunlu alanları doldurun", ToastNotification.ToastType.Warning); return; } isSaving = true; StateHasChanged(); ShowToast("Başarılı", isEditMode ? "Güncellendi" : "Eklendi", ToastNotification.ToastType.Success); CloseModal(); await LoadData(); isSaving = false; }

    private void OpenDeleteDialog(RestorationServiceDto s) { deleteItemId = s.Id; deleteItemName = s.RestorationServiceName; showDeleteDialog = true; }
    private async Task ConfirmDelete() { isDeleting = true; StateHasChanged(); if (await RestorationServiceSvc.DeleteAsync(deleteItemId)) { showDeleteDialog = false; await LoadData(); ShowToast("Başarılı", "Silindi", ToastNotification.ToastType.Success); } isDeleting = false; }

    private string GetStatusBadge(string? s) => s?.ToLower() switch { "active" => "bg-success", "inactive" => "bg-secondary", _ => "bg-info" };
    private async void ShowToast(string title, string msg, ToastNotification.ToastType type) { toastTitle = title; toastMessage = msg; toastType = type; showToast = true; StateHasChanged(); await Task.Delay(3000); showToast = false; StateHasChanged(); }
}