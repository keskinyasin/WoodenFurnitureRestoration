@page "/admin/addresses"
@rendermode InteractiveServer
@attribute [StreamRendering(false)]
@attribute [AuthorizeAdmin]
@layout AdminLayout
@using WoodenFurnitureRestoration.Blazor.Services
@using WoodenFurnitureRestoration.Blazor.Components.Shared
@using WoodenFurnitureRestoration.Shared.DTOs.Address
@using WoodenFurnitureRestoration.Shared.DTOs.Customer
@using WoodenFurnitureRestoration.Shared.DTOs.Supplier
@inject AuthService AuthService
@inject AddressService AddressService
@inject CustomerService CustomerService
@inject SupplierService SupplierService
@inject NavigationManager Navigation
@inject ILogger<Addresses> Logger

@if (!isAuthenticated)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <ToastNotification IsVisible="@showToast" Title="@toastTitle" Message="@toastMessage" Type="@toastType" OnClose="() => showToast = false" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">📍 Adresler Yönetimi</h2>
            <p class="text-muted mb-0">
                Toplam @addresses.Count adres |
                <span class="badge bg-primary">@addresses.Count(a => a.CustomerId.HasValue) Müşteri</span>
                <span class="badge bg-success">@addresses.Count(a => a.SupplierId.HasValue) Tedarikçi</span>
            </p>
        </div>
        <button class="btn btn-primary btn-lg" @onclick="OpenAddModal">
            <i class="bi bi-plus-circle me-2"></i> Yeni Adres
        </button>
    </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Adres Türü</label>
                    <select class="form-select" @bind="filterType" @bind:after="ApplyFilters">
                        <option value="">Tümü</option>
                        <option value="customer">🧑 Müşteri Adresleri</option>
                        <option value="supplier">🏭 Tedarikçi Adresleri</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Müşteri</label>
                    <select class="form-select" @bind="filterCustomerId" @bind:after="ApplyFilters">
                        <option value="0">Tümü</option>
                        @foreach (var c in customers)
                        {
                            <option value="@c.Id">@c.FullName</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tedarikçi</label>
                    <select class="form-select" @bind="filterSupplierId" @bind:after="ApplyFilters">
                        <option value="0">Tümü</option>
                        @foreach (var s in suppliers)
                        {
                            <option value="@s.Id">@s.SupplierName</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Şehir</label>
                    <input type="text" class="form-control" placeholder="Şehir ara..." @bind="filterCity" @bind:event="oninput" @onkeyup="ApplyFilters" />
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (isLoading)
            {
                <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
            }
            else if (filteredAddresses?.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-geo-alt text-muted" style="font-size: 4rem;"></i>
                    <p class="mt-3 text-muted fs-5">Adres bulunamadı</p>
                    <button class="btn btn-primary" @onclick="OpenAddModal">
                        <i class="bi bi-plus-circle me-2"></i> İlk Adresi Ekle
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>İlişkili Kayıt</th>
                                <th>Adres</th>
                                <th>Şehir / İlçe</th>
                                <th>Posta Kodu</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var address in filteredAddresses)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@address.Id</span></td>
                                    <td>
                                        @if (address.CustomerId.HasValue && !string.IsNullOrEmpty(address.CustomerName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                                <div>
                                                    <strong>@address.CustomerName</strong>
                                                    <br /><small class="text-muted">Müşteri #@address.CustomerId</small>
                                                </div>
                                            </div>
                                        }
                                        else if (address.SupplierId.HasValue && !string.IsNullOrEmpty(address.SupplierName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                                    <i class="bi bi-building"></i>
                                                </div>
                                                <div>
                                                    <strong>@address.SupplierName</strong>
                                                    <br /><small class="text-muted">Tedarikçi #@address.SupplierId</small>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@address.AddressLine1</strong>
                                        @if (!string.IsNullOrEmpty(address.AddressLine2))
                                        {
                                            <br />
                            
                                            <small class="text-muted">@address.AddressLine2</small>
                                        }
                                    </td>
                                    <td>
                                        <i class="bi bi-geo-alt text-danger me-1"></i>
                                        <strong>@address.City</strong> / @address.District
                                        <br /><small class="text-muted">@address.Country</small>
                                    </td>
                                    <td><span class="badge bg-info">@address.PostalCode</span></td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-info" @onclick="@(() => ViewAddress(address))" title="Detay"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => OpenEditModal(address))" title="Düzenle"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => OpenDeleteDialog(address))" title="Sil"><i class="bi bi-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- View Modal -->
    <AdminModal IsVisible="@showViewModal" Title="📍 Adres Detayı" OnClose="@(() => showViewModal = false)" ShowFooter="false" ModalSize="modal-lg">
        @if (selectedAddress != null)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light"><i class="bi bi-link-45deg me-1"></i> İlişkili Kayıt</div>
                        <div class="card-body">
                            @if (selectedAddress.CustomerId.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        <i class="bi bi-person fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@selectedAddress.CustomerName</h5>
                                        <small class="text-muted">Müşteri ID: @selectedAddress.CustomerId</small>
                                    </div>
                                </div>
                            }
                            else if (selectedAddress.SupplierId.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        <i class="bi bi-building fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@selectedAddress.SupplierName</h5>
                                        <small class="text-muted">Tedarikçi ID: @selectedAddress.SupplierId</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light"><i class="bi bi-geo-alt me-1"></i> Konum</div>
                        <div class="card-body">
                            <p class="mb-1"><strong>@selectedAddress.City</strong> / @selectedAddress.District</p>
                            <p class="mb-1">@selectedAddress.Country</p>
                            <span class="badge bg-info">@selectedAddress.PostalCode</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header bg-light"><i class="bi bi-house me-1"></i> Tam Adres</div>
                <div class="card-body">
                    <p class="mb-1"><strong>@selectedAddress.AddressLine1</strong></p>
                    @if (!string.IsNullOrEmpty(selectedAddress.AddressLine2))
                    {
                        <p class="mb-0 text-muted">@selectedAddress.AddressLine2</p>
                    }
                </div>
            </div>
        }
    </AdminModal>

    <!-- Add/Edit Modal -->
    <AdminModal IsVisible="@showModal"
                Title="@(isEditMode ? "✏️ Adres Düzenle" : "➕ Yeni Adres")"
                OnClose="CloseModal"
                OnSave="SaveAddress"
                IsSaving="@isSaving"
                ModalSize="modal-lg">

        <!-- Adres Türü Seçimi -->
        <div class="mb-4">
            <label class="form-label fw-bold">Bu adres kime ait? <span class="text-danger">*</span></label>
            @if (errors.ContainsKey("Owner"))
            {
                <div class="text-danger small mb-2">@errors["Owner"]</div>
            }
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check card p-3 @(addressType == "Customer" ? "border-primary bg-light" : "")">
                        <input class="form-check-input" type="radio" name="addressType" id="typeCustomer"
                               checked="@(addressType == "Customer")" @onchange="@(() => { addressType = "Customer"; editSupplierId = null; })" />
                        <label class="form-check-label d-flex align-items-center" for="typeCustomer">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <i class="bi bi-person"></i>
                            </div>
                            <div>
                                <strong>Müşteri Adresi</strong>
                                <br /><small class="text-muted">Müşteriye ait teslimat/fatura adresi</small>
                            </div>
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check card p-3 @(addressType == "Supplier" ? "border-success bg-light" : "")">
                        <input class="form-check-input" type="radio" name="addressType" id="typeSupplier"
                               checked="@(addressType == "Supplier")" @onchange="@(() => { addressType = "Supplier"; editCustomerId = null; })" />
                        <label class="form-check-label d-flex align-items-center" for="typeSupplier">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <strong>Tedarikçi Adresi</strong>
                                <br /><small class="text-muted">Tedarikçi firma adresi</small>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- İlişki Seçimi -->
        @if (addressType == "Customer")
        {
            <div class="mb-3">
                <label class="form-label fw-bold"><i class="bi bi-person me-1"></i> Müşteri <span class="text-danger">*</span></label>
                <select class="form-select @(errors.ContainsKey("Owner") ? "is-invalid" : "")" @bind="editCustomerId">
                    <option value="">-- Müşteri Seçin --</option>
                    @foreach (var c in customers)
                    {
                        <option value="@c.Id">@c.FullName (@c.CustomerEmail)</option>
                    }
                </select>
                @if (editCustomerId.HasValue && editCustomerId > 0)
                {
                    var selectedCustomer = customers.FirstOrDefault(c => c.Id == editCustomerId);
                    if (selectedCustomer != null)
                    {
                        <div class="alert alert-info mt-2 mb-0 py-2">
                            <small><i class="bi bi-info-circle me-1"></i> <strong>@selectedCustomer.FullName</strong> — @selectedCustomer.CustomerCity, @selectedCustomer.CustomerPhone</small>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="mb-3">
                <label class="form-label fw-bold"><i class="bi bi-building me-1"></i> Tedarikçi <span class="text-danger">*</span></label>
                <select class="form-select @(errors.ContainsKey("Owner") ? "is-invalid" : "")" @bind="editSupplierId">
                    <option value="">-- Tedarikçi Seçin --</option>
                    @foreach (var s in suppliers)
                    {
                        <option value="@s.Id">@s.SupplierName (@s.ShopName)</option>
                    }
                </select>
                @if (editSupplierId.HasValue && editSupplierId > 0)
                {
                    var selectedSupplier = suppliers.FirstOrDefault(s => s.Id == editSupplierId);
                    if (selectedSupplier != null)
                    {
                        <div class="alert alert-success mt-2 mb-0 py-2">
                            <small><i class="bi bi-info-circle me-1"></i> <strong>@selectedSupplier.SupplierName</strong> — @selectedSupplier.ShopName, @selectedSupplier.SupplierPhone</small>
                        </div>
                    }
                }
            </div>
        }

        <hr />

        <!-- Adres Bilgileri -->
        <div class="mb-3">
            <label class="form-label fw-bold">Adres Satırı 1 <span class="text-danger">*</span></label>
            <input type="text" class="form-control @(errors.ContainsKey("AddressLine1") ? "is-invalid" : "")" @bind="editAddressLine1" maxlength="255" placeholder="Mahalle, Sokak, Bina No..." />
            @if (errors.ContainsKey("AddressLine1"))
            {
                <div class="invalid-feedback">@errors["AddressLine1"]</div>
            }
            <small class="text-muted">@editAddressLine1.Length / 255</small>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Adres Satırı 2</label>
            <input type="text" class="form-control" @bind="editAddressLine2" maxlength="255" placeholder="Daire, Kat... (opsiyonel)" />
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Şehir <span class="text-danger">*</span></label>
                <input type="text" class="form-control @(errors.ContainsKey("City") ? "is-invalid" : "")" @bind="editCity" maxlength="100" placeholder="İstanbul" />
                @if (errors.ContainsKey("City"))
                {
                    <div class="invalid-feedback">@errors["City"]</div>
                }
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">İlçe <span class="text-danger">*</span></label>
                <input type="text" class="form-control @(errors.ContainsKey("District") ? "is-invalid" : "")" @bind="editDistrict" maxlength="100" placeholder="Kadıköy" />
                @if (errors.ContainsKey("District"))
                {
                    <div class="invalid-feedback">@errors["District"]</div>
                }
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Posta Kodu <span class="text-danger">*</span></label>
                <input type="text" class="form-control @(errors.ContainsKey("PostalCode") ? "is-invalid" : "")" @bind="editPostalCode" maxlength="20" placeholder="34000" />
                @if (errors.ContainsKey("PostalCode"))
                {
                    <div class="invalid-feedback">@errors["PostalCode"]</div>
                }
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Ülke <span class="text-danger">*</span></label>
            <input type="text" class="form-control @(errors.ContainsKey("Country") ? "is-invalid" : "")" @bind="editCountry" maxlength="100" placeholder="Türkiye" />
            @if (errors.ContainsKey("Country"))
            {
                <div class="invalid-feedback">@errors["Country"]</div>
            }
        </div>
    </AdminModal>

    <ConfirmDialog IsVisible="@showDeleteDialog" Title="Adres Sil" Message="Bu adresi silmek istediğinizden emin misiniz?" ItemName="@deleteItemName" IsProcessing="@isDeleting" OnConfirm="ConfirmDelete" OnCancel="@(() => showDeleteDialog = false)" />
}

@code {
    private bool isAuthenticated, isLoading, isChecked, showViewModal, showModal, isEditMode, isSaving, showDeleteDialog, isDeleting, showToast;
    private List<AddressDto> addresses = new();
    private List<AddressDto> filteredAddresses = new();
    private List<CustomerDto> customers = new();
    private List<SupplierDto> suppliers = new();
    private AddressDto? selectedAddress;
    private int editingId, deleteItemId;
    private string deleteItemName = "", toastTitle = "", toastMessage = "";
    private ToastNotification.ToastType toastType;

    private string filterType = "";
    private int filterCustomerId, filterSupplierId;
    private string filterCity = "";

    private string addressType = "Customer";
    private int? editCustomerId, editSupplierId;
    private string editAddressLine1 = "", editAddressLine2 = "", editCity = "", editDistrict = "", editPostalCode = "", editCountry = "Türkiye";
    private Dictionary<string, string> errors = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !isChecked)
        {
            isChecked = true;
            isAuthenticated = await AuthService.IsAdminLoggedInAsync();
            if (!isAuthenticated) { Navigation.NavigateTo("/admin", replace: true); return; }
            await LoadData();
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        isLoading = true; StateHasChanged();
        addresses = await AddressService.GetAllAsync() ?? new();
        customers = await CustomerService.GetAllAsync() ?? new();
        suppliers = await SupplierService.GetAllAsync() ?? new();
        ApplyFilters();
        isLoading = false;
    }

    private void ApplyFilters()
    {
        filteredAddresses = addresses;
        if (filterType == "customer") filteredAddresses = filteredAddresses.Where(a => a.CustomerId.HasValue).ToList();
        else if (filterType == "supplier") filteredAddresses = filteredAddresses.Where(a => a.SupplierId.HasValue).ToList();
        if (filterCustomerId > 0) filteredAddresses = filteredAddresses.Where(a => a.CustomerId == filterCustomerId).ToList();
        if (filterSupplierId > 0) filteredAddresses = filteredAddresses.Where(a => a.SupplierId == filterSupplierId).ToList();
        if (!string.IsNullOrWhiteSpace(filterCity)) filteredAddresses = filteredAddresses.Where(a => a.City.Contains(filterCity, StringComparison.OrdinalIgnoreCase)).ToList();
    }

    private void ViewAddress(AddressDto a) { selectedAddress = a; showViewModal = true; }
    private void OpenAddModal() { isEditMode = false; editingId = 0; ResetForm(); showModal = true; }
    private void OpenEditModal(AddressDto a)
    {
        isEditMode = true; editingId = a.Id;
        addressType = a.CustomerId.HasValue ? "Customer" : "Supplier";
        editCustomerId = a.CustomerId; editSupplierId = a.SupplierId;
        editAddressLine1 = a.AddressLine1; editAddressLine2 = a.AddressLine2 ?? "";
        editCity = a.City; editDistrict = a.District; editPostalCode = a.PostalCode; editCountry = a.Country;
        errors.Clear(); showModal = true;
    }
    private void CloseModal() { showModal = false; ResetForm(); }
    private void ResetForm()
    {
        addressType = "Customer"; editCustomerId = null; editSupplierId = null;
        editAddressLine1 = ""; editAddressLine2 = ""; editCity = ""; editDistrict = "";
        editPostalCode = ""; editCountry = "Türkiye"; errors.Clear();
    }

    private bool ValidateForm()
    {
        errors.Clear();

        // Sahip kontrolü
        if (addressType == "Customer" && (!editCustomerId.HasValue || editCustomerId == 0))
            errors["Owner"] = "Lütfen bir müşteri seçin.";
        else if (addressType == "Supplier" && (!editSupplierId.HasValue || editSupplierId == 0))
            errors["Owner"] = "Lütfen bir tedarikçi seçin.";

        // Adres Satırı 1
        if (string.IsNullOrWhiteSpace(editAddressLine1))
            errors["AddressLine1"] = "Adres satırı zorunludur.";
        else if (editAddressLine1.Trim().Length < 10)
            errors["AddressLine1"] = "Adres en az 10 karakter olmalıdır.";
        else if (editAddressLine1.Trim().Length > 255)
            errors["AddressLine1"] = "Adres en fazla 255 karakter olabilir.";

        // Şehir
        if (string.IsNullOrWhiteSpace(editCity))
            errors["City"] = "Şehir zorunludur.";
        else if (editCity.Trim().Length < 2)
            errors["City"] = "Şehir en az 2 karakter olmalıdır.";

        // İlçe
        if (string.IsNullOrWhiteSpace(editDistrict))
            errors["District"] = "İlçe zorunludur.";
        else if (editDistrict.Trim().Length < 2)
            errors["District"] = "İlçe en az 2 karakter olmalıdır.";

        // Posta Kodu
        if (string.IsNullOrWhiteSpace(editPostalCode))
            errors["PostalCode"] = "Posta kodu zorunludur.";
        else if (editPostalCode.Trim().Length < 3)
            errors["PostalCode"] = "Posta kodu en az 3 karakter olmalıdır.";

        // Ülke
        if (string.IsNullOrWhiteSpace(editCountry))
            errors["Country"] = "Ülke zorunludur.";
        else if (editCountry.Trim().Length < 2)
            errors["Country"] = "Ülke en az 2 karakter olmalıdır.";

        return errors.Count == 0;
    }

    private async Task SaveAddress()
    {
        if (!ValidateForm())
        {
            ShowToast("Uyarı", "Lütfen formdaki hataları düzeltin.", ToastNotification.ToastType.Warning);
            return;
        }

        isSaving = true; StateHasChanged();

        try
        {
            bool success;
            if (isEditMode)
            {
                success = await AddressService.UpdateAsync(editingId, new UpdateAddressDto
                {
                    AddressLine1 = editAddressLine1.Trim(),
                    AddressLine2 = string.IsNullOrWhiteSpace(editAddressLine2) ? null : editAddressLine2.Trim(),
                    City = editCity.Trim(),
                    District = editDistrict.Trim(),
                    PostalCode = editPostalCode.Trim(),
                    Country = editCountry.Trim()
                });
            }
            else
            {
                success = await AddressService.CreateAsync(new CreateAddressDto
                {
                    AddressLine1 = editAddressLine1.Trim(),
                    AddressLine2 = string.IsNullOrWhiteSpace(editAddressLine2) ? null : editAddressLine2.Trim(),
                    City = editCity.Trim(),
                    District = editDistrict.Trim(),
                    PostalCode = editPostalCode.Trim(),
                    Country = editCountry.Trim(),
                    CustomerId = addressType == "Customer" ? editCustomerId : null,
                    SupplierId = addressType == "Supplier" ? editSupplierId : null
                });
            }

            if (success) { CloseModal(); await LoadData(); ShowToast("Başarılı", isEditMode ? "Adres güncellendi" : "Adres eklendi", ToastNotification.ToastType.Success); }
            else ShowToast("Hata", "İşlem başarısız. Lütfen tekrar deneyin.", ToastNotification.ToastType.Error);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Adres kaydetme hatası");
            ShowToast("Hata", "Bir hata oluştu.", ToastNotification.ToastType.Error);
        }
        finally { isSaving = false; }
    }

    private void OpenDeleteDialog(AddressDto a)
    {
        deleteItemId = a.Id;
        var owner = a.CustomerName ?? a.SupplierName ?? "Bilinmiyor";
        deleteItemName = $"{a.AddressLine1}, {a.City} ({owner})";
        showDeleteDialog = true;
    }

    private async Task ConfirmDelete()
    {
        isDeleting = true; StateHasChanged();
        if (await AddressService.DeleteAsync(deleteItemId)) { showDeleteDialog = false; await LoadData(); ShowToast("Başarılı", "Adres silindi", ToastNotification.ToastType.Success); }
        else ShowToast("Hata", "Silme başarısız", ToastNotification.ToastType.Error);
        isDeleting = false;
    }

    private async void ShowToast(string title, string msg, ToastNotification.ToastType type)
    {
