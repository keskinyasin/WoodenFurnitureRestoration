@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="restoration-layout">
    <nav class="restoration-navbar">
        <div class="navbar-brand">
            <a href="/restoration">🔧 Restoration</a>
        </div>
        <div class="navbar-links">
            <a href="/restoration" class="@GetActive("/restoration")">Ana Sayfa</a>
            <a href="/restoration/services" class="@GetActive("/restoration/services")">Hizmetler</a>
            <a href="/restoration/gallery" class="@GetActive("/restoration/gallery")">Galeri</a>
            <a href="/restoration/about" class="@GetActive("/restoration/about")">Hakkımızda</a>
            <a href="/restoration/contact" class="@GetActive("/restoration/contact")">İletişim</a>
        </div>
        <div class="navbar-actions">
            <a href="/" class="btn-back">← Ana Menü</a>
        </div>
    </nav>

    <main class="restoration-content">
        @Body
    </main>

    <footer class="restoration-footer">
        <p>© 2026 Restoration — Ahşap restorasyon hizmetleri</p>
    </footer>
</div>

<style>
    .restoration-layout {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .restoration-navbar {
        background-color: #DC143C;
        padding: 0 2rem;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .navbar-brand a {
        color: white;
        font-size: 1.4rem;
        font-weight: 800;
        text-decoration: none;
        letter-spacing: 1px;
    }

    .navbar-links {
        display: flex;
        gap: 1.5rem;
    }

        .navbar-links a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-weight: 500;
            padding: 0.4rem 0.8rem;
            border-radius: 0.3rem;
            transition: all 0.3s ease;
        }

            .navbar-links a:hover,
            .navbar-links a.active {
                color: white;
                background-color: rgba(255,255,255,0.15);
            }

    .btn-back {
        color: #FFD700;
        text-decoration: none;
        font-weight: 600;
        padding: 0.4rem 1rem;
        border: 1px solid #FFD700;
        border-radius: 0.3rem;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background-color: #FFD700;
            color: #DC143C;
        }

    .restoration-content {
        flex: 1;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
    }

    .restoration-footer {
        background-color: #a01030;
        color: rgba(255,255,255,0.7);
        text-align: center;
        padding: 1rem;
        font-size: 0.9rem;
    }
</style>

@code {
    private string GetActive(string path)
    {
        return Navigation.Uri.Contains(path, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}